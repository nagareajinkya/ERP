# MASTER PRODUCTION ENVIRONMENT VARIABLES
# Copy this to .env and fill in the values

# Database Configuration
DB_USERNAME=postgres
DB_PASSWORD=manager
MONGODB_URI=mongodb://db-smartops:27017/smart_ops_db

# Security
JWT_SECRET=your_long_random_jwt_secret_here

# Docker Hub
DOCKER_HUB_USERNAME=your_username

# AWS S3 (For profile images/signatures)
AWS_ACCESS_KEY=your_access_key
AWS_SECRET_KEY=your_secret_key
AWS_REGION=ap-south-1
AWS_BUCKET_NAME=sbms-user-data

# Network Configuration
ALLOWED_ORIGINS=http://your-ec2-ip-or-domain
VITE_API_BASE_URL=http://your-ec2-ip-or-domain/api
